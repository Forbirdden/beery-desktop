{
  "name": "beery-desktop",
  "version": "0.0.1",
  "description": "Desktop app for open-source app store",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Forbirdden/beery-desktop"
  },
  "dependencies": {
    "electron": "^25.0.0",
    "electron-store": "^8.1.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.forbirdden.beery",
    "productName": "Beery",
    "copyright": "Copyright Â© 2025 ${Forbirdden}",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "win": {
    "target": "nsis",
    "publishAutoUpdate": true
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": ["AppImage", "deb"]
  }
},
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
